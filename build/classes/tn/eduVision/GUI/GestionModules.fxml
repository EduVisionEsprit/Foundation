<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass"
             xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.eduVision.GUI.GestionModulesController"
             stylesheets="@gestionmodule.css">
    <children>
        <Label layoutX="7.0" prefHeight="40.0" prefWidth="622.0" style="-fx-underline: 2;" styleClass="label-title" text="Modules:" textFill="#876a14">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="modulesTable" layoutX="311.0" layoutY="55.0" prefHeight="206.0" prefWidth="389.0">
            <columns>
                <TableColumn fx:id="nom_col" prefWidth="161.5999755859375" text="Nom" />
                <TableColumn fx:id="idProg_col" prefWidth="191.19992065429688" text="Programme" />
            </columns>
        </TableView>
        <Pane layoutX="14.0" layoutY="66.0" prefHeight="134.0" prefWidth="248.0" styleClass="pane-description">
            <children>
                <Label layoutX="15.0" layoutY="6.0" prefHeight="17.0" prefWidth="219.0" styleClass="label-description" text="Nom du Module">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txt_nomModule" layoutX="15.0" layoutY="23.0" prefHeight="48.0" prefWidth="227.0" styleClass="text-field-description" />
                <Label layoutX="15.0" layoutY="79.0" prefHeight="17.0" prefWidth="219.0" styleClass="label-description" text="Du programme: ">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Label>
                <ComboBox fx:id="programmeComboBox" layoutX="112.0" layoutY="79.0" prefWidth="120.0" styleClass="combo-box-description" />
            </children>
        </Pane>
        <Button fx:id="btn_add" layoutX="34.0" layoutY="221.0" mnemonicParsing="false" onAction="#add" styleClass="button-action" text="Ajouter" />
        <Button fx:id="btn_update" layoutX="107.0" layoutY="221.0" mnemonicParsing="false" onAction="#update" styleClass="button-action" text="Modifier" />
        <Button fx:id="btn_delete" layoutX="181.0" layoutY="221.0" mnemonicParsing="false" onAction="#delete" styleClass="button-action" text="Supprimer" />
    </children>
</AnchorPane>
