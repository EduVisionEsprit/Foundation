<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.eduVision.GUI.NoteEtudiantController">
   <top>
        <VBox alignment="CENTER" prefHeight="428.0" prefWidth="766.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="Vos Notes" />
            <HBox alignment="CENTER" spacing="10.0">
                <ComboBox fx:id="cmbMatieres" onAction="#afficherNotes" />
            </HBox>
            <TableView fx:id="tblNotes" prefHeight="289.0" prefWidth="66.0">
                <columns>
                    <TableColumn fx:id="colModule" prefWidth="144.0" text="Module" />
                    <TableColumn fx:id="colMatiere" minWidth="0.0" prefWidth="309.5999755859375" text="Matière" />
                    <TableColumn fx:id="colNote" prefWidth="140.79998779296875" text="Note" />
                </columns>
            </TableView>
             <Button onAction="#generateTranscript" text="Sauvegarder mon Relevé" />
            <TextArea fx:id="txtTranscript" editable="false" prefHeight="38.0" prefWidth="794.0" wrapText="true" />
        </VBox>
   </top>
</BorderPane>
